{
  "manifest_version": 3,
  "name": "Copilot Translator",
  "version": "1.0.0",
  "description": "Translator extension using GitHub Copilot SDK",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "http://localhost:5555/*",
    "http://127.0.0.1:5555/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "vite.svg",
      "48": "vite.svg",
      "128": "vite.svg"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
